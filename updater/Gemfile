# frozen_string_literal: true

source "https://rubygems.org"

# Using a fixed version/ref will not work with automatic updates because the
# version is checked using a list of refs at
# https://github.com/dependabot/dependabot-core.git/info/refs?service=git-upload-pack
# They are so many, our reference won't be found for it to be updated.
# Hence adding the branch.

git "https://github.com/dependabot/dependabot-core.git", branch: "main", ref: "0672e3b" do
  gem "dependabot-bundler"
  gem "dependabot-cargo"
  gem "dependabot-common"
  gem "dependabot-composer"
  gem "dependabot-docker"
  gem "dependabot-elm"
  gem "dependabot-github_actions"
  gem "dependabot-git_submodules"
  gem "dependabot-go_modules"
  gem "dependabot-gradle"

  gem "dependabot-hex"
  gem "dependabot-maven"
  gem "dependabot-npm_and_yarn"
  gem "dependabot-nuget"
  gem "dependabot-pub"
  gem "dependabot-python"
  gem "dependabot-terraform"
end

group :test do
  gem "rspec"
  gem "rubocop"
  gem "rubocop-performance"
  gem "vcr"
  gem "webmock"
end
